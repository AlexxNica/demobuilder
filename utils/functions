#!/bin/bash -e

. config

interface_ip() {
  ip addr show dev $1 | sed -n '/inet / { s!.*inet !!; s!/.*!!; p; }'
}

apiserver_start() {
  eval $(utils/apiserver.py $(interface_ip $BRIDGE))
  export APILISTENER

  export PROXY=$(curl -s http://$APILISTENER/cache)
}

apiserver_stop() {
  kill $APIPID
}

compress_qcow2() {
  BACKINGFILE=$(qemu-img info $1 | sed -n -e '/^backing file: / { s/.*: //; p; }')

  if [ -z $BACKINGFILE ]; then
    qemu-img convert -c -O qcow2 $1 $1.tmp
  else
    qemu-img convert -c -O qcow2 -B $BACKINGFILE $1 $1.tmp
  fi

  mv $1.tmp $1
}

convert_qcow2() {
  qemu-img convert -O $2 $1 $1.tmp
  mv $1.tmp $(echo $1 | sed -e 's/\.[^.]*$//').$2
}

wait_pid() {
  while [ -e /proc/$1 ]; do
    sleep 1
  done
}

read_properties() {
  eval $(utils/readproperties.py $1 $2)
}

cache() {
  DEST=cache/$(echo $1 | sed -e 's!.*://!!')
  if ! [ -e $DEST ]; then
    http_proxy=$PROXY https_proxy=$PROXY curl -o /dev/null $1
  fi
  echo $DEST
}

if [ "$DEBUG" ]; then
  set -x
fi
