#!/bin/bash

register_channels() {
  for CHANNEL in $*
  do
    curl -so /etc/yum.repos.d/$CHANNEL.repo http://10.33.11.10:8085/$CHANNEL.repo
  done
}

yum_update() {
  yum -y update
}

install_packages() {
  yum -y install $*
}

cleanup() {
  yum clean all
  rm /etc/yum.repos.d/*.repo

  rm /etc/ssh/ssh_host_*

  fstrim /
}
