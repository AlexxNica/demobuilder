#!/bin/bash -e

. utils/functions

TARGET=$1:$(basename $(dirname $0))

. targets/$TARGET
export MEM=${MEM:-1024}
export NAME=${NAME:-$TARGET}
export CPUS=${CPUS:-1}

if [ -e build/$TARGET.box ]; then
  echo "$0: build/$TARGET.box already exists, not rebuilding"
  exit
fi

if [ $# -ne 1 ]; then
  echo "usage: $0 base"
  exit 1
fi

utils/addlayer.sh $1 $(dirname $0)
mv build/$TARGET.qcow2 tmp/$TARGET.qcow2  # TODO
convert_qcow2 tmp/$TARGET.qcow2 qcow2
compress_qcow2 tmp/$TARGET.qcow2

TMPDIR=$(mktemp -d)
envsubst <$(dirname $0)/box.xml >$TMPDIR/box.xml

tar -czf tmp/$TARGET.box --transform='s!.*/!!' --transform="s/$TARGET.qcow2/box-disk1.img/" $(dirname $0)/{metadata.json,Vagrantfile} tmp/$TARGET.qcow2 $TMPDIR/box.xml
rm -rf tmp/$TARGET.qcow2 $TMPDIR
mv tmp/$TARGET.box build/$TARGET.box

echo \$ vagrant box add $TARGET build/$TARGET.box
echo \$ vagrant init $TARGET
echo \$ vagrant up
